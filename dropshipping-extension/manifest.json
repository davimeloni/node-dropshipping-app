{
    "manifest_version": 2,
    "name": "Drop Shipping Extension",
    "version": "0.1",
    "permissions": [ "tabs" ],
    "content_scripts": [
        {
            "matches": [
                "*://www.aliexpress.com/*"
            ],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Lookup a definition!"
    }
}